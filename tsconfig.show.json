{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "lib": [
            "dom",
            "esnext"
        ],
        "moduleResolution": "bundler",
        "noEmit": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "target": "esnext",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "isolatedModules": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "module": "es6",
        "resolvePackageJsonExports": true,
        "resolvePackageJsonImports": true,
        "preserveConstEnums": true,
        "useDefineForClassFields": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "strictBuiltinIteratorReturn": true,
        "alwaysStrict": true,
        "useUnknownInCatchVariables": true
    },
    "files": [
        "./src/components/betting/index.ts",
        "./src/services/bulkLoadingService.ts",
        "./src/services/imageUploadService.ts",
        "./src/services/notificationService.ts",
        "./src/styles/colors.ts",
        "./src/styles/index.ts",
        "./src/styles/shadows.ts",
        "./src/styles/spacing.ts",
        "./src/styles/typography.ts",
        "./src/types/auth.ts",
        "./src/types/betting.ts",
        "./src/types/navigation.ts",
        "./src/utils/formatting.ts",
        "./src/utils/github.ts",
        "./src/utils/odds.ts",
        "./src/components/Login.tsx",
        "./src/components/SignUp.tsx",
        "./src/components/betting/BetCard.tsx",
        "./src/components/betting/BetList.tsx",
        "./src/components/betting/LiveBetCard.tsx",
        "./src/components/ui/AddFriendModal.tsx",
        "./src/components/ui/BetInviteModal.tsx",
        "./src/components/ui/FeedbackModal.tsx",
        "./src/components/ui/FriendRequestsModal.tsx",
        "./src/components/ui/Header.tsx",
        "./src/components/ui/LiveGameBanner.tsx",
        "./src/components/ui/ProfileEditor.tsx",
        "./src/components/ui/TabBar.tsx",
        "./src/components/ui/UserBalance.tsx",
        "./src/contexts/AuthContext.tsx",
        "./src/navigation/AppNavigator.tsx",
        "./src/screens/AccountScreen.tsx",
        "./src/screens/BetsScreen.tsx",
        "./src/screens/CreateBetScreen.tsx",
        "./src/screens/FriendsScreen.tsx",
        "./src/screens/LiveEventsScreen.tsx",
        "./src/screens/ResolveScreen.tsx",
        "./App.tsx"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "App.tsx"
    ],
    "exclude": [
        "node_modules",
        ".references",
        "fresh-backup",
        "dist",
        "build",
        ".expo",
        "android",
        "ios",
        ".amplify"
    ]
}

